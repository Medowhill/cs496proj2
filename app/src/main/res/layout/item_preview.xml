<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/b_preview_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/b_preview_outer_vertical_margin"
        android:layout_marginLeft="@dimen/b_preview_outer_horizontal_margin"
        android:layout_marginRight="@dimen/b_preview_outer_horizontal_margin"
        android:layout_marginTop="@dimen/b_preview_outer_vertical_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/b_preview_radius"
        app:cardElevation="@dimen/b_preview_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/b_preview_padding">

            <ImageView
                android:id="@+id/b_preview_imageView"
                android:layout_width="@dimen/b_preview_imageView_size"
                android:layout_height="@dimen/b_preview_imageView_size"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/b_preview_inner_margin" />

            <TextView
                android:id="@+id/b_preview_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/b_preview_textSize" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>