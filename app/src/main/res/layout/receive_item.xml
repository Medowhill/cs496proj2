<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/receive_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/c_debt_outer_vertical_margin"
        android:layout_marginLeft="@dimen/c_debt_outer_horizontal_margin"
        android:layout_marginRight="@dimen/c_debt_outer_horizontal_margin"
        android:layout_marginTop="@dimen/c_debt_outer_vertical_margin"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/c_debt_radius"
        app:cardElevation="@dimen/c_debt_elevation">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/c_debt_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/receive_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/c_debt_name_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/c_debt_detail_textsize" />

                    <TextView
                        android:id="@+id/receive_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/c_debt_detail_textsize" />
                </LinearLayout>

                <TextView
                    android:id="@+id/receive_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/c_debt_amount_textsize" />
            </LinearLayout>

            <ImageView
                android:id="@+id/receive_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cancel_line"
                android:visibility="invisible"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>